# General Settings
#set adjust-open best-fit          # Automatically adjust to best-fit when opening a document
set scroll-step 50                # Set scroll speed (adjust as needed)
set guioptions s                  # Show status bar (use "hv" to show both scrollbars)

# Zoom Settings
set zoom-step 2                 # Set the zoom step for zoom in/out
set zoom-min 1

set window-width 40
set window-width 25

# Database Settings
set database sqlite               # Use SQLite for saving bookmarks and history (if supported)


# Keybinds
map = zoom in
map + zoom default

# Colours

# Enable recolor by default for PDF content
set recolor                     "true"

# Warm gray/tan theme
set recolor-lightcolor          "#dcd7ba"  # warm tan background
set recolor-darkcolor           "#2d2a2e"  # dark gray text

# UI colors to match
set default-bg                  "#dcd7ba"
set default-fg                  "#2d2a2e"

set statusbar-bg                "#c8c093"
set statusbar-fg                "#2d2a2e"

set inputbar-bg                 "#dcd7ba"
set inputbar-fg                 "#2d2a2e"

set completion-bg               "#dcd7ba"
set completion-fg               "#2d2a2e"
set completion-highlight-bg     "#c8c093"
set completion-highlight-fg     "#16161d"

set index-bg                    "#dcd7ba"
set index-fg                    "#2d2a2e"
set index-active-bg             "#c8c093"
set index-active-fg             "#16161d"
