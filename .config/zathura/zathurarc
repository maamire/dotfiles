# General Settings
#set adjust-open best-fit
set scroll-step 50
set guioptions s

# Zoom Settings
set zoom-step 2
set zoom-min 1

set window-width 40
set window-width 25

# Database Settings
set database sqlite


# Keybinds
map = zoom in
map + zoom default

# Colours (Warm)
set recolor                     "true"

set recolor-lightcolor          "#dcd7ba"
set recolor-darkcolor           "#2d2a2e"

set default-bg                  "#dcd7ba"
set default-fg                  "#2d2a2e"

set statusbar-bg                "#c8c093"
set statusbar-fg                "#2d2a2e"

set inputbar-bg                 "#dcd7ba"
set inputbar-fg                 "#2d2a2e"

set completion-bg               "#dcd7ba"
set completion-fg               "#2d2a2e"
set completion-highlight-bg     "#c8c093"
set completion-highlight-fg     "#16161d"

set index-bg                    "#dcd7ba"
set index-fg                    "#2d2a2e"
set index-active-bg             "#c8c093"
set index-active-fg             "#16161d"
